html
	height: 100%
	
	bg: $page_bg
	background-repeat: no-repeat
	background-attachment: fixed

	font-family: $font
	font-weight: 300

body
	position: relative // Let footer position itself correctly
	box-sizing: border-box
	max-width: 1024px

	min-height: 100%

	margin: 0 auto
	padding-bottom: $footer_height

	bg: $content_bg

	box-shadow: 0 0 1rem rgba(0, 0, 0, 0.25)
