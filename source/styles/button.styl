$button_bg = rgb(184,198,223) rgb(109,136,183)
$button_red_bg = rgb(234,90,74) rgb(218,30,30)
$button_textColor = rgb(55, 55, 55)

.button
	padding: 0.25em 0.75em

	border: none
	border-radius: 0.25em
	/*
	Top, bottom
	*/
	box-shadow: inset 0 0.0625rem 0.0625rem rgba(255,255,255,0.40),
				inset 0 -0.0625rem 0.0625rem rgba(0, 0, 0, 0.20),
				inset 0.0625rem 0 0.0625rem rgba(255,255,255,0.15),
				inset -0.0625rem 0 0.0625rem rgba(255,255,255,0.15),
				0 0 0.0625rem rgb(0,0,0),
				0 0.0625rem 0.0625rem rgba(255,255,255,0.35);

	bg: $button_bg

	text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5)

	color: $button_textColor
	font-size: 1.25rem

	cursor: pointer

	&.large
		font-size: 2rem
	
	&.xlarge
		font-size: 2.5rem

	&:hover
		bg: adjustColors($button_bg, 5%)

	&:active
		bg: adjustColors($button_bg, -5%)

	&.red
		bg: $button_red_bg
		text-shadow: 0 1px 0 rgba(255, 255, 255, 0.30)
			
		&:hover
			bg: adjustColors($button_red_bg, 5%)

		&:active
			bg: adjustColors($button_red_bg, -5%)
