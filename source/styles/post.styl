.post
	position: relative
	padding: 1rem
	
	color: $post_textColor

	font-size: 1rem

	h1
		margin-top: 0

	.date
		float: right
		margin-top: 0.5rem

.post,
.postPreview
	text-shadow: 0 1px rgba(255, 255, 255, 0.4)

.postPreviews
	list-style: none
	margin: 0
	padding: 1em

.postPreview_image
	width: $postPreview_width
	height: $postPreview_image_height
	overflow: hidden

	img
		max-width: 100%

.postPreview
	display: inline-block
	position: relative
	vertical-align: top

	width: $postPreview_width
	height: $postPreview_height

	margin: 1.75em 1em 1em 1em

	border-bottom: 0.125rem solid $postPreview_highlightColor

	a.postLink
		display: block
		text-decoration: none
		color: inherit
		width: $postPreview_width
		height: $postPreview_height

	a.commentLink
		position: absolute
		right: 0
		bottom: 0

		font-size: 0.75rem
		color: gray
		text-decoration: none

	pre
		width: 100%

	h2
		font-size: 1.125rem
		font-weight: normal
		margin: 0.25rem 0 0.125rem 0

	.date
		margin: 0.125rem 0

		color: gray
		font-size: 0.825rem

	.description
		margin: 0.5rem 0
		font-size: 0.8625rem

	.tag
		position: absolute
		top: -0.75rem
		right: 0

		padding: 0.25rem 0.5rem

		background: rgba($postPreview_highlightColor, 0.75)
		
		color: $postPreview_tag_textColor
		font-size: 0.8125rem
		text-transform: uppercase

		box-shadow: 0 0 0.25rem rgba(0,0,0,0.25);

		&:before
			vertical-align: -0.0625em
			margin-right: 0.325rem

