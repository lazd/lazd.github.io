.post
	position: relative
	padding: 1rem

	color: $post_textColor

	font-size: 1rem

	.title
		margin-top: 0
		margin-bottom: 0.1em

	.date
		margin-top: 0
		color: $dateColor

	p
		margin-left: 0.25em

	a, a:visited
		cursor: pointer
		color: $linkColor
		text-decoration-color: $linkUnderlineColor
		text-decoration-thickness: 2px
		text-underline-offset: 2px

		&:hover
			color: $linkColorHover

.post,
.postPreview
	text-shadow: 0 1px rgba(255, 255, 255, 0.8)

.headingImage
	img
		max-width: 100%

	& + a h2
		margin-top: 1em

.fullMast
	width: 100%
	height: 100%
	background-size: auto 100%

.fullMastWide
	@extend .fullMast
	background-size: 100% auto
	background-position: center center

.fullMastNoRepeat
	background-repeat: no-repeat

.fullMastCenter
	@extend .fullMast
	background-position: center center

.titleImage
	&.left
		margin: 0 1rem 1rem 0
	&.right
		margin: 0 0 1rem 1rem

.postPreviews
	list-style: none
	width: $postPreview_width * 2 + 4rem
	margin: 0 auto
	padding: 1em 0
	overflow: hidden // Clear floats

.postPreview_image
	display: flex
	align-items: center;
	justify-content: center;

	width: 100%
	height: $postPreview_image_height
	overflow: hidden

	background: rgb(255, 255, 255)
	box-shadow: 0 0 0.25rem rgba(0, 0, 0, 0.15)

	text-align: center

	img
		max-width: 100%

.postPreview
	display: block
	position: relative
	float: left
	vertical-align: top

	width: $postPreview_width
	height: $postPreview_height

	margin: 1.75em 1em 1em 1em

	border-bottom: 0.125rem solid $postPreview_highlightColor

	a.postLink
		display: block
		text-decoration: none
		color: inherit
		width: 100%
		height: $postPreview_height

	a.commentLink
		position: absolute
		right: 0
		bottom: 0

		font-size: 0.75rem
		color: gray
		text-decoration: none

		&:before
			margin-right: 0.25rem

	pre
		width: 100%

	h2
		font-size: 1.125rem
		font-weight: normal
		margin: 0.25rem 0 0.125rem 0

	.date
		margin: 0.125rem 0

		color: gray
		font-size: 0.825rem

	.description
		margin: 0.5rem 0
		font-size: 0.8625rem

	.tag
		position: absolute
		top: -0.75rem
		right: 0

		display: flex
		align-items: center

		padding: 0.25rem 0.5rem

		background: rgba($postPreview_highlightColor, 0.90)

		color: $postPreview_tag_textColor
		font-size: 0.8125rem
		text-transform: uppercase
		text-shadow: 0 1px rgba(255,255,255,0.25)

		box-shadow: 0 0 0.25rem rgba(0,0,0,0.25)

[class^="icon-"]:before, [class*=" icon-"]:before
	margin-right: 0.325rem

.prettyPicture
	display: block
	max-width: 90%
	margin: 2rem auto
	box-shadow: 0 0 1rem rgba(0, 0, 0, 0.50)

iframe
	max-width: 100%