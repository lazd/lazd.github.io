$post_textColor = rgb(10, 10, 10)
$post_bg = rgba(0,0,0,0.35)

.post
	position: relative
	max-width: 1024px
	margin: auto
	padding: 1rem

	box-shadow: 0 0 1rem rgba(0, 0, 0, 0.25)
	
	bg: $bg

	color: $post_textColor

	text-shadow: 0 1px rgba(255, 255, 255, 0.4)

	h1
		margin-top: 0

	.date
		position: absolute
		top: 0
		right: 1em