code
	font-size: 1.25em

pre.code
	margin: 1em 1.5em
	text-align: left

pre.c64,
.c64_width
	width: $c64_width
	box-sizing: border-box

pre.c64
	margin-left: auto
	margin-right: auto

	background: $c64_bg

	border: 1em solid $c64_text

	color: $c64_text
	font-size: 1.5em
	font-weight: bolder
	line-height: 0.815em
	text-shadow: none

	&.small
		font-size: 1em

	&.fade
		animation: c64_fadeIn 4s ease-out
		
		.c64_cursor
			animation: fadeIn 4s, c64_blink 1s infinite


.c64_cursor
	display: inline-block
	width: 1em
	height: 1em
	bg: $c64_text

pre.code:hover,
pre.code.animate
	.c64_cursor
		animation: fadeIn 4s, c64_blink 1s infinite

	.c64_flash
		animation: blink 0.05s infinite