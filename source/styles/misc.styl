.anchor
	display: block;
	outline: none

	// Do something here later
	// &:focus
	// 	text-shadow: 0 0 3px rgba(0, 0, 200, 0.25)

.black
	background: black

.grayText
	color: gray

.center
	text-align: center
	margin: auto

.vCenter
	display: flex
	align-items: center;
	justify-content: center;

.noMargin
	margin: 0 !important

.margin
	margin: 1rem

.titleImage
	&.left
		margin: 0 1rem 1rem 0
	&.right
		margin: 0 0 1rem 1rem

blockquote
	border-left: 0.25rem solid rgb(100, 100, 100)
	padding-left: 0.5rem

	font-style: italic

figure
	clear: both
	text-align: center
	margin: 1rem auto

figure img
	box-shadow: 0 0 1rem rgba(0,0,0,0.5)
	max-height: 20rem
	max-width: 40rem

figcaption
	font-style: italic

// For links created by grunt-pages on headings
.anchor
	text-decoration: none

hr
	margin: 0.25em 0

.left
	float: left

.right
	float: right

.clear
	clear: both

#increase, #decrease
	margin: 0
	vertical-align: top

#resize
	padding: $px
	clearfix()

	*
		display: block
		float: left

		box-shadow: inset 0 0.0625rem 0.0625rem rgba(255,255,255,0.40),
					inset 0 -0.0625rem 0.0625rem rgba(0, 0, 0, 0.20),
					inset 0.0625rem 0 0.0625rem rgba(255,255,255,0.15),
					inset -0.0625rem 0 0.0625rem rgba(255,255,255,0.15)

	button:first-child
		border-top-right-radius: 0
		border-bottom-right-radius: 0
		margin-right: 0

	button:last-child
		border-top-left-radius: 0
		border-bottom-left-radius: 0
		margin-left: 0

$pageSizeBk = rgba(242,242,242, 0.85) rgba(214,214,214, 0.85)

#pagePixelSize
	display: inline-block
	width: 4rem
	height: 3.375rem

	box-sizing: border-box

	bg: $pageSizeBk

	text-align: center
	line-height: 3.25rem
