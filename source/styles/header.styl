.header
	position: relative
	overflow: hidden // Prevent margin collapse
	height: $header_height
	bg: $header_bg

	box-shadow: 0 0 1rem rgba(0, 0, 0, 0.25)

	.topLogo
		position: absolute
		left: 0
		height: $header_height
		padding: 0 0.5em

		font-size: 1.5rem
		color: white
		line-height: $header_height
		text-shadow: 0 -1px 0 rgba(0,0,0,0.5)
		text-decoration: none

		i
			margin-right: 0.25rem
